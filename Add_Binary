class Solution {
    public String addBinary(String a, String b) {
        StringBuilder result = new StringBuilder();

        int i = a.length() - 1;
        int j = b.length() - 1;
        int carry = 0;

        // Iterate from the back to the front while digits exist or carry is nonzero
        while (i >= 0 || j >= 0 || carry != 0) {
            int sum = carry;

            if (i >= 0) {
                sum += a.charAt(i) - '0';
                i--;
            }

            if (j >= 0) {
                sum += b.charAt(j) - '0';
                j--;
            }

            // Append current binary digit (sum % 2)
            result.append(sum % 2);

            // Update carry for next iteration
            carry = sum / 2;
        }

        // Reverse string since we appended digits from least significant to most
        return result.reverse().toString();
    }
}
