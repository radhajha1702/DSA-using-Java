class Solution {
    public int divide(int dividend, int divisor) {

        // Overflow case: (-2^31) / (-1) = 2^31 â†’ overflow for 32-bit int
        if (dividend == Integer.MIN_VALUE && divisor == -1) {
            return Integer.MAX_VALUE;
        }

        // Convert both to long and take absolute values
        long a = Math.abs((long) dividend);
        long b = Math.abs((long) divisor);

        int result = 0;

        // Perform division using bit shifts (fast subtraction)
        while (a >= b) {
            long temp = b;
            int multiple = 1;

            // Double temp until it is just smaller than dividend
            while (a >= (temp << 1)) {
                temp <<= 1;
                multiple <<= 1;
            }

            a -= temp;
            result += multiple;
        }

        // Apply sign correctly
        if ((dividend < 0) ^ (divisor < 0)) {
            return -result;
        }

        return result;
    }
}
